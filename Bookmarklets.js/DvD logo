javascript:(function(){  var balls = [];  var speed = 2.5;  var ballWidth = 50;  var ballHeight = 50;  var horizontalSpeed = 3;  document.onkeyup = function(event) {    switch (event.keyCode) {      case 69:             makeBall();        break;    }  };  var makeBall = function() {    var ball = document.createElement('div');    ball.style.width = ballWidth + 'px';    ball.style.height = ballHeight + 'px';    ball.style.background = 'red';    ball.style.borderRadius = '0%';    ball.style.position = 'absolute';    ball.style.top = Math.random() * (window.innerHeight - ballHeight) + 'px';    ball.style.left = Math.random() * (window.innerWidth - ballWidth) + 'px';    document.body.appendChild(ball);    var ballData = {      element: ball,      direction: {        x: 1,        y: 1      },      position: {        x: parseInt(ball.style.left),        y: parseInt(ball.style.top)      }    };    balls.push(ballData);     var moveBall = function(ballData) {      var ball = ballData.element;      var position = ballData.position;      var direction = ballData.direction;      if (position.y <= 0 || position.y + ballHeight >= window.innerHeight) {        direction.y *= -1;      }      if (position.x <= 0 || position.x + ballWidth >= window.innerWidth) {        direction.x *= -1;      }      position.y += speed * direction.y;      position.x += horizontalSpeed * direction.x;      ball.style.top = position.y + 'px';      ball.style.left = position.x + 'px';      ballData.position = position;      ballData.direction = direction;    };    setInterval(function() { moveBall(ballData); }, 15);  };  makeBall();})();
